{
    "name": "igor-popravka/ip-time-clock",
    "description": "PSR-20 Clock implementation based on server's geolocated IP timezone",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Popravka",
            "email": "ipopravka@hotmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "psr/clock": "^1.0",
        "guzzlehttp/guzzle": "^7.9"
